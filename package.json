{
  "name": "govuk-vue",
  "version": "1.0.1",
  "license": "MIT",
  "author": {
    "name": "Matt Eason"
  },
  "homepage": "https://github.com/govuk-vue/govuk-vue",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build & npx copyfiles \"src/**\" dist",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "release": "npm run build & npm publish"
  },
  "peerDependencies": {
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.14.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "govuk-frontend": "^5.7.0",
    "jsdom": "^21.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.59.2",
    "typescript": "~4.8.4",
    "vite": "^5.4.2",
    "vitest": "^0.29.1",
    "vue-tsc": "^1.2.0"
  },
  "type": "module",
  "files": ["dist"],
  "main": "./dist/govuk-vue.umd.cjs",
  "module": "./dist/govuk-vue.js",
  "exports": {
    ".": {
      "import": "./dist/govuk-vue.js",
      "require": "./dist/govuk-vue.umd.cjs"
    }
  }
}
